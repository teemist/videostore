<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2A2C37"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/idButtonBackFromDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
           android:layout_marginHorizontal="30dp"
            android:background="@color/white"
            android:fontFamily="@font/inter_light"
            android:text="Вернуться в каталог"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/idNameDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AsRock INTEL Arc A770"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/idImgDetails"
            android:layout_width="wrap_content"
            android:layout_height="270dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/bigarca770" />

        <TextView
            android:id="@+id/idCharsDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Видеопамять: 16GB\n
Тип памяти: GDDR6\n
Разрядность шины: 256бит\n
Тип охлаждения: воздушное\n
Толщина: 56мм"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/idPriceDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="37 990р."
            android:textColor="#42FC00"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/idButtonAddToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить в корзину"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/inter_light"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_rounded_details" />




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>